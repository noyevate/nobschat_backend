{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                        
    "lib": ["ES2020"],                           
    "outDir": "./dist",                          
    "rootDir": "./src",                          
    "strict": true,                              
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,                        
    "resolveJsonModule": true,                   
    "moduleResolution": "node",                  
    "noImplicitAny": true,                       
    "allowJs": true,                             
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]         
                      
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


